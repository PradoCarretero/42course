LIB = ar rcs

COMPILER = gcc
FLAGS = -Wall -Wextra -Werror

NAME = libft.a
SRC = ft_isalpha.c \
						ft_isalnum.c \
						ft_isalpha.c \
						ft_isascii.c \
						ft_isdigit.c \
						ft_isprint.c \
						ft_memcpy.c \
						ft_toupper.c \
						ft_tolower.c \
						ft_atoi.c \
						ft_strchr.c \
						ft_strlcpy.c \
						ft_strrchr.c \
						ft_strlen.c 

OBJFILES= $(SRC:.c=.o)
INCLUDE = libft.h

$(NAME) : $(OBJFILES) $(INCLUDE)
	$(LIB) $(NAME) $(OBJFILES)

%.o: %.c 
	$(COMPILER) $(FLAGS) -c -o $@ $<

clean:
	rm -f $(OBJFILES)

fclean:
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean